<% include partials/head.ejs %>

<a class="lastAdded" href="/<%= myrecipe.id %>">My last added recipe: <strong><%= myrecipe.title%></strong> </a>


<div class="list_recipes">
<% for (let i = 0; i < data.length; i++) { %>

  <section>
<h1>
  <a href="/<%= data[i]._id %>"
    ><%= data[i].title %></a>
</h1>
<p>
  <%= data[i].duration %> (hours, minutes)
</p>
<p>
  <%= data[i].amount %>
</p>
<p>
  <%= data[i].description %>
</p>
<button id="verwijderKnop" data-id="<%= data[i]._id%>" type="button" name="button">Remove recipe</button>
</section>

<% } %>
</div>
<% include partials/tail.ejs %>
